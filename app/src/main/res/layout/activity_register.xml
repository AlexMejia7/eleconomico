<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Overlay opcional semi-transparente (para contraste) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#20FFFFFF"/> <!-- blanco 12% -->

    <!-- Contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Logo UTH en el centro -->
            <ImageView
                android:id="@+id/logoCenter"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/uth"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:alpha="0.2"
                android:layout_marginBottom="24dp"
                android:contentDescription="Logo UTH"/>

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:autofillHints="name"
                android:maxLines="1" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo electrónico"
                android:inputType="textEmailAddress"
                android:autofillHints="emailAddress"
                android:maxLines="1"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:autofillHints="password"
                android:maxLines="1"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/etDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripción"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:gravity="top"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/btnSeleccionarFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seleccionar Foto"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar"
                android:layout_marginTop="20dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
